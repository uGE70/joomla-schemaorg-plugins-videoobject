<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="schema">
		<fieldset
			name="schema"
			label="PLG_SYSTEM_SCHEMA_FIELD_SCHEMA_LABEL"
		>
			<field
				name="VideoObject"
				type="subform"
				showon="schemaType:VideoObject"
			>
		<form>
			<field
				name="@type"
				type="hidden"
				default="VideoObject"
			/>	

			<field
					name="name"
					type="text"
					label="PLG_SCHEMAORG_VIDEOOBJECT_FIELD_NAME_LABEL"
					filter="string"
					size="30"
				/>
			<field
					name="description"
					type="text"
					label="PLG_SCHEMAORG_VIDEOOBJECT_FIELD_DESCRIPTION_LABEL"
					filter="string"
				/>
				<field
    name="uploadDate"
    type="datetime"
    label="Upload date"
    description="Select date and time"
	showtime="true"
	filter="server_utc"
    required="false"
    default="NOW"
/>
				<field
					name="thumbnailUrl"
					type="url"
					label="PLG_SCHEMAORG_THUMBNAIL_URL_LABEL"
					filter="url"
					validate="url"
				/>

			<field
					name="duration"
					type="text"
					label="PLG_SCHEMAORG_VIDEOOBJECT_FIELD_DURATION_LABEL"
					 description="Use the format PT45M0S for 45min00"
					filter="string"
					size="30"
				/>

			<field
				name="contentUrl"
				type="url"
				label="PLG_SCHEMAORG_CONTENT_URL_LABEL"
				filter="url"
				validate="url"
			/>

			<field
				name="embedUrl"
				type="url"
				label="PLG_SCHEMAORG_EMBED_URL_LABEL"
				filter="url"
				validate="url"
			/>

			</form>
			</field>


		</fieldset>
	</fields>
</form>
